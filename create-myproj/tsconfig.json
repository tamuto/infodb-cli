{
	"compilerOptions": {
		"module": "NodeNext",
		"outDir": "dist",
		"rootDir": "src",
		"moduleResolution": "NodeNext",
		"target": "ES2021",
		"esModuleInterop": true,
		"declaration": true,
		"isolatedModules": true,
		"sourceMap": true,
		"declarationMap": true,
		"composite": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true
	},
	"include": ["src"]
}
