{
  "name": "@infodb/lctl",
  "version": "0.1.0",
  "description": "AWS Lambda Control Tool - Simple CLI for managing Lambda functions",
  "main": "dist/index.js",
  "bin": {
    "lctl": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "aws",
    "lambda",
    "cli",
    "deployment",
    "serverless"
  ],
  "author": "infodb",
  "license": "MIT",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "yaml": "^2.3.4",
    "glob": "^10.3.10",
    "archiver": "^6.0.1",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/archiver": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "prettier": "^3.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/infodb/lctl.git"
  },
  "bugs": {
    "url": "https://github.com/infodb/lctl/issues"
  },
  "homepage": "https://github.com/infodb/lctl#readme"
}